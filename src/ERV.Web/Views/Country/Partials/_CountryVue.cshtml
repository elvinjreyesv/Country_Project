
<div class="col-sm-6 col-lg-4 mb-3" v-for="(country, index) in countries" :class="index+1% 3 != 0 ? ' mb-lg-0' : ''">
    <div class="row">
        <div class="col-sm-4">
            <div class="feature text-white rounded-3">
                <img class="img-fluid rounded mx-auto d-block" :src="country.flag.png" />
            </div>
        </div>
        <div class="col-sm-8">
            <h5 class="fw-bolder mt-3">{{country.name}}</h5>
        </div>
        <div class="col-sm-12">
            <ul class="country-info">
                <li v-if="country.region !='' && country.region !=null"><span>@Lang("_Region"): </span>  <a class="btn btn-link text-decoration-none" :href="'@settings.Value.BaseUrl' + 'Region/' + country.region">{{country.region}}</a></li>
                <li v-if="country.subRegion !='' && country.subRegion !=null"><span>@Lang("_SubRegion"): </span> <a class="btn btn-link text-decoration-none" :href="'@settings.Value.BaseUrl' + 'Region/' + country.region + '/' + 'SubRegion/' + country.subRegion">{{country.subRegion}}</a></li>
                <li class="mt-1">
                    <a class="text-decoration-none text-center" :href="'@settings.Value.BaseUrl' + 'Country/' + country.code">
                        @Lang("_ViewCountry")
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>
