@model EErrorCodeClientApi;

@{
    ViewData["Title"] = ViewBag.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";

    var topHeader = new TopHeaderDTO()
    {
        AdditionalText = "404 -"+ Lang("_Notfound"),
        Image = string.Concat(settings.Value.BaseUrl, "images/Home/top/error.jpg")
    };
}

@await Html.PartialAsync("~/Views/Shared/Partials/_Top.cshtml", topHeader)

<div class="section">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-12">
                <div class="text-center">
                    <img src="~/images/icons/code-error.png" class="img-fluid text-center" />
                </div>
                <h1>@Lang("_Notfound")</h1>
                <br />
                <span class="font-weight-bold">@Lang("_Global_PageNoFound")</span>
                <div class="text-center">
                    @Lang("_Global_ServerError_ReferenceCode"): <span class="font-weight-bold">@(((int)Model).ToString("D8"))</span>
                </div>
            </div>
        </div>
    </div>
</div>